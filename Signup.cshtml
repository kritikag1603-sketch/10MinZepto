
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/generallayout.cshtml";
}

<h2>Signup</h2>
<div class="row">
    <div class="col-4"></div>
    <div class="col-sm-4 p-3 card">
        <form method="post">
            <div class="text-center">Sign Up</div>
            <div class="form-group">
                <lablel>Name</lablel>
                <input type="text" class="form-control" name="name" placeholder="Enter Your Name" />
            </div>
            <div class="form-group">
                <lablel>Email</lablel>
                <input type="email" class="form-control" name="email" placeholder="Enter Your Email" />
            </div>
            <div class="form-group">
                <lablel>Mobile No.</lablel>
                <input type="number" class="form-control" name="mobno" placeholder="Enter Your Number" />
            </div>
            <div class="form-group">
            <lablel>Password</lablel>
            <input type="password" class="form-control" name="password" placeholder="Enter Your Email" />
    </div>
    <div class="form-group">
        <lablel>Address</lablel>
        <textarea class="form-control" name="address" placeholder="Enter Your Address"></textarea>
    </div>
    <div class="form-group">
        <lablel>Landmark</lablel>
        <input type="text" class="form-control" name="landmark" placeholder="Enter Your Landmark" />
    </div>
    <div class="form-group">
        <lablel>Pincode</lablel>
        <input type="text" class="form-control" name="pincode" placeholder="Enter Your Pincode" />
    </div>
    <input type="submit" class="form-control btn btn-outline-danger " value="login" style="margin-top:5px;" />
    </form>
            </div>
    </div>




